@using GISModel.Entidades
@{
    ViewBag.Title = "Lista de Empregados Próprios";
}

<h2>Empregado Proprio</h2>

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            
            <a href="@Url.Action("Novo", "EmpProprio")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Novo
            </a>
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">

        @{
            Html.RenderPartial("_MensagensDeRetorno");
        }

        @if (ViewBag.TEmpProprio != null)
        {
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">
                                <label class="pos-rel">
                                    <input type="checkbox" class="ace" />
                                    <span class="lbl"></span>
                                </label>
                            </th>
                            @*<th>Empregado</th>*@
                            <th>Nome</th>
                            <th>Matricula</th>
                            <th>Função</th>
                           
                            @*<th class="hidden-480">Descrição</th>*@
                            <th width="89px"></th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (EmpregadoProprio iEmpregado in ViewBag.TEmpProprio)
                        {
                            <tr>
                                <td class="center">
                                    <label class="pos-rel">
                                        <input type="checkbox" class="ace" />
                                        <span class="lbl"></span>
                                    </label>
                                </td>

                                <td>@iEmpregado.NomeEmpregado</td>
                                <td>@iEmpregado.NumeroPessoal</td>
                                <td>@iEmpregado.funcao</td>
                                

                                @*<td class="hidden-480">@iDepartamento.Descricao</td>*@

                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">
                                        <a class="blue" href="#">
                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                        </a>

                                        <a href='@Url.Action("Novo", "EmProprio", new { id = @iEmpregado.EmpProprioID })' class="green">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        <a class="red" href="#">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                        <div class="inline pos-rel">
                                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                <li>
                                                    <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                                        <span class="blue">
                                                            <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>

                                                @*<li>
                                                        @Html.ActionLink("Hello", "Edicao", "Empresa", new { i = "123" }, null)
                                                        <a href='@Url.Action("Edicao", "Empregadoes")' class="tooltip-success" data-rel="tooltip" title="Edit">
                                                            <span class="green">
                                                                <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>*@

                                                <li>
                                                    <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                        <span class="red">
                                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        }



    </div>
</div>

@section Scripts {

}




